#:lang cm

@ "Please enter an expr to compute, or `#exit` or `#e` to exit:".

def cont := true.
while cont do
    write_string "> " comma
    (def resp := read_line) comma

    if resp = "#exit" or resp = "#e" 
    then 
        (def cont := false) 
    else
        try
            (@ evalxp resp)
        catch e with
            match e | struct Error (_,msg;) -> @ msg end
.

@ "Good Bye!".
