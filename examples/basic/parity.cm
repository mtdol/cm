#:lang cm

-- int -> string
defun parity (int n) :=
  letrec odd (int n) :=
    | n = 0 -> "odd"
    else even : (sub1:n)
  in letrec even (int n) :=
    | n = 0 -> "even"
    else odd : (sub1:n)
  in
    even : (abs:n)//

@ "Are these numbers odd/even?"//
@ "0 : " $ (parity:0)//
@ "1 : " $ (parity:1)//
@ "3 : " $ (parity:3)//
@ "22: " $ (parity:22)//
@ "-2: " $ (parity:-2)//
@ "-3: " $ (parity:-3)//
